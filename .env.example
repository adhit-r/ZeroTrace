# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change_this_password_in_production
POSTGRES_DB=zerotrace
DB_HOST=postgres
DB_PORT=5432
DB_SSL_MODE=disable

# Redis/Valkey Configuration
REDIS_HOST=valkey
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# API Service
API_PORT=8080
API_HOST=0.0.0.0
API_MODE=debug
JWT_SECRET=change_this_secret_key_in_production_min_32_chars
JWT_EXPIRY=24h
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1m
LOG_LEVEL=info
LOG_FORMAT=json

# Enrichment Service
ENRICHMENT_PORT=8000
DATABASE_URL=postgresql://postgres:change_this_password_in_production@postgres:5432/zerotrace
REDIS_URL=redis://valkey:6379/0
CPE_GUESSER_ENABLED=true
CPE_GUESSER_VALKEY_DB=8
CPE_GUESSER_FALLBACK_TO_ML=true

# Frontend
VITE_API_URL=http://localhost:8080
VITE_ENRICHMENT_URL=http://localhost:8000
